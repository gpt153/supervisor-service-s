[Unit]
Description=Supervisor Service - MCP Server
After=network.target

[Service]
Type=simple
User=samuel
WorkingDirectory=/home/samuel/sv/supervisor-service
Environment=NODE_ENV=production
EnvironmentFile=/home/samuel/sv/supervisor-service/.env
ExecStart=/usr/bin/node /home/samuel/sv/supervisor-service/dist/index.js
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=supervisor-service

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=/home/samuel/sv/supervisor-service

[Install]
WantedBy=multi-user.target
