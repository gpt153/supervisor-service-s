{
  "name": "supervisor-service",
  "version": "1.0.0",
  "description": "Centralized service manager for AI supervisor system",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "migrate:create": "node-pg-migrate create",
    "db:seed": "tsx src/scripts/seed.ts",
    "assemble": "tsx src/scripts/assemble-claude.ts",
    "regenerate": "tsx src/scripts/regenerate-claude.ts",
    "regenerate-all": "tsx scripts/regenerate-all.ts",
    "update-all": "tsx src/scripts/update-all-supervisors.ts",
    "init-projects": "tsx src/scripts/init-project-supervisors.ts",
    "watch:planning": "tsx src/scripts/watch-planning.ts",
    "verify": "tsx src/scripts/verify-instruction-system.ts",
    "index-learnings": "tsx src/scripts/index-learnings.ts",
    "index-learnings:watch": "tsx src/scripts/index-learnings.ts --watch",
    "collect-snapshots": "tsx src/scripts/collect-daily-snapshots.ts",
    "quota-check": "tsx src/scripts/hourly-quota-check.ts",
    "daily-optimization": "tsx src/scripts/daily-optimization.ts",
    "health-monitor": "tsx src/cli/run-health-monitor.ts",
    "mcp:daemon": "tsx src/mcp/mcp-daemon.ts",
    "mcp:install": "bash systemd/install-mcp.sh",
    "test": "tsx tests/prompt-generator.test.ts && tsx tests/ps-health-monitor.test.ts"
  },
  "keywords": [
    "supervisor",
    "mcp",
    "postgres"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "axios": "^1.13.2",
    "better-sqlite3": "^12.6.2",
    "dockerode": "^4.0.9",
    "dotenv": "^16.3.1",
    "fastify": "^5.7.1",
    "google-auth-library": "^10.5.0",
    "googleapis": "^170.1.0",
    "js-yaml": "^4.1.1",
    "pg": "^8.11.3",
    "pino": "^10.2.0",
    "pino-pretty": "^13.1.3",
    "uuid": "^13.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/dockerode": "^4.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.30",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^10.0.0",
    "node-pg-migrate": "^7.0.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
